doctype html
html(ng-app="emissaryApp")

  head

    //- Site Information
    block meta

      title Emissary â€¢ Match Report

  body(ng-controller="MatchReportCtrl")

    table(ng-init="teams = ['teamPlayerParticipantsSummaries', 'otherTeamPlayerParticipantsSummaries']")#teamTable
      tr
        th Color
        th Champion
        th Level
        th Summoner Name
        th Spells
        th Gold
        th K/D/A
        th CS

      tbody(ng-repeat="team in teams")
        tr#teamName
          td(bgcolor="{{getTeamColor($index)}}" rowspan="{{data[team].length+1}}")
        tr(ng-repeat="summoner in data[team]")
          td(bgcolor="{{getWinLoseColor(summoner)}}")
            table
              td
                img(ng-src="{{getChampIcon(summoner)}}")#champIcon
              td
                {{getPlayerStat(summoner, "skinName")}}
          td(bgcolor="{{getWinLoseColor(summoner)}}")#champlvl
            {{getDetailedPlayerStat(summoner, "LEVEL")}}
          td(bgcolor="{{getWinLoseColor(summoner)}}")#summonerName
            {{summoner.summonerName}} ({{getPlayerStat(summoner, "level")}})
          td(bgcolor="{{getWinLoseColor(summoner)}}")#summonersBox
            table
              td
                img(ng-src="{{getSpellIcon(summoner.spell1Id)}}")
              td
                img(ng-src="{{getSpellIcon(summoner.spell2Id)}}")
          td(bgcolor="{{getWinLoseColor(summoner)}}")#gold
            {{getDetailedPlayerStat(summoner, "GOLD_EARNED")}}k
          td(bgcolor="{{getWinLoseColor(summoner)}}")#kda
            {{getDetailedPlayerStat(summoner, "CHAMPIONS_KILLED")}}/{{getDetailedPlayerStat(summoner, "NUM_DEATHS")}}/{{getDetailedPlayerStat(summoner, "ASSISTS")}}
          td(bgcolor="{{getWinLoseColor(summoner)}}")#cs
            {{getDetailedPlayerStat(summoner, "MINIONS_KILLED")}}

    //- Javascript
    block javascript

      //- Required Libraries
      script(src="//code.angularjs.org/1.3.0-beta.1/angular.min.js")