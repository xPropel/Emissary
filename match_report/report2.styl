html
  *
    font-family sans-serif
    font-size 100%
    margin 0
    padding 0

#game-info-container
  min-height 120px
  color #fff
  background #272727

#victory-content
  margin auto
  text-align center
  font-size 3em

#victory-line
  width 60%
  margin auto
  margin-top 7px
  margin-bottom 8px

#game-info-content
  width 50%
  margin auto
  text-align center
  ul
    li
      list-style none
      display inline
      font-weight bold
      margin-left 10px
      margin-right 10px
      font-size 1em
    #divider
      border-right 1px solid #FFF
      border-left 1px solid #FFF
    li:first-of-type
      margin-left 0px
    li:last-of-type
      margin-right 0px
    label
      font-size 0.85em
      font-weight normal

#content-container
  width 100%
  height 100%
  padding-top 20px
  color #fff
  background #313131
  section
    margin auto
    width 900px

#team-name
  font-size 1.3em
  font-weight bold
  margin-top 12px

#table-container
  article
    padding 4px

#team-table
  border 3px solid #272727
  background #272727
  border-collapse collapse
  width 900px
  overflow: hidden
  #champion-th, #summoner-th, #items-th
    text-align left
  #champion-td
    width 100px
  #summoner-td
    width 200px
  #level-td, #spells-td, #kda-td, #cs-td, #gold-td
    text-align center
    width 70px
  #team-totals
    padding-right: 100px

#champion-td, #summoners-td
  img
    width 25px
    height 25px