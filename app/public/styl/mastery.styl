html, body
  font-family sans-serif

body
  margin 0

  #mastery-page
    width 827px
    height 479px
    user-select none

    #tree, #row
      position absolute
      width 265px

    #tree
      height 827px

      .mastery, .border, .rankbox, .rank, .req, .tree-rank
        transition background-image 0.75s linear

      .mastery, .border
        position absolute
        background-size 50px
        width 50px
        height 50px

      .border #tooltip
          position absolute
          width 100%
          height 100%
      .border .tooltip
          left 5px !important

      .rankbox
        position absolute
        background-size 28px 14px
        width 28px
        height 14px
        top 40px

      .rank
        position absolute
        background-size 28px 14px
        height 14px
        font-size 0.65em
        padding-top 1px
        padding-left 7px

      .req
        position absolute
        background-size 18px 25px
        width 18px
        height 25px
        top -18px

      .tree-rank
        position absolute
        top 435px
        left 12px
        color #fff
        text-transform uppercase

